# Environment
ENV=production

# Analytics & Tracking
GSHOP_PIXEL_ID=prod-pixel-xyz
ANALYTICS_ENABLED=true

# Payment Gateways (Production Keys)
MERCAPAGO_PUBLIC_KEY=APP_USR-production-key
STRIPE_PUBLISHABLE_KEY=pk_live_production_key

# Blockchain (Mainnet)
POLYGON_RPC_URL=https://polygon-rpc.com
