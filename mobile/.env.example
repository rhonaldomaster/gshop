# API Configuration
API_BASE_URL=http://localhost:3000
API_VERSION=/api/v1

# Environment
ENV=development

# Analytics & Tracking
GSHOP_PIXEL_ID=your-pixel-id-here
ANALYTICS_ENABLED=true

# Payment Gateways
MERCAPAGO_PUBLIC_KEY=your-mercapago-public-key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# Blockchain
POLYGON_RPC_URL=https://polygon-rpc.com
USDC_CONTRACT_ADDRESS=0x2791bca1f2de4661ed88a30c99a7a9449aa84174

# EasyPost Shipping
EASYPOST_PUBLIC_KEY=your-easypost-public-key

# WebSocket
WEBSOCKET_URL=http://localhost:3000

# Deep Linking
APP_SCHEME=gshop
DEEP_LINK_BASE_URL=https://gshop.com

# OAuth - Social Login (optional, buttons hidden if not configured)
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id
FACEBOOK_APP_ID=your-facebook-app-id

# Push Notifications
EXPO_PROJECT_ID=your-expo-project-id
FCM_SENDER_ID=your-fcm-sender-id

# Feature Flags
ENABLE_LIVE_SHOPPING=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_AFFILIATE_MODE=true
ENABLE_OFFLINE_MODE=true

# Debug & Testing
DEBUG_MODE=true
ENABLE_DEV_MENU=true
LOG_LEVEL=debug