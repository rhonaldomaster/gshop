
# Database Configuration
DATABASE_URL=postgresql://gshop_user:gshop_password@localhost:5432/gshop_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=gshop_user
DB_PASSWORD=gshop_password
DB_DATABASE=gshop_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MercadoPago Configuration (Placeholders)
MERCAPAGO_CLIENT_ID=your-mercadopago-client-id
MERCAPAGO_CLIENT_SECRET=your-mercadopago-client-secret
MERCAPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCAPAGO_WEBHOOK_SECRET=your-mercadopago-webhook-secret
MERCAPAGO_ENVIRONMENT=sandbox

# API Configuration
API_PORT=3000
API_PREFIX=api/v1
API_URL=http://localhost:3000

# Admin Web Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# App Configuration
APP_NAME=GSHOP
APP_URL=http://localhost:3001
