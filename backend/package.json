{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:load": "artillery run test/load/rate-limit.yml",
    "test:load:rate-limit": "artillery run test/load/rate-limit.yml",
    "test:load:auth": "artillery run test/load/auth-stress.yml",
    "test:load:api": "artillery run test/load/api-load.yml",
    "test:load:report": "artillery run --output results.json test/load/rate-limit.yml && artillery report results.json",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/typeorm.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/typeorm.config.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/database/typeorm.config.ts",
    "seed": "ts-node src/database/seeds/seed.ts",
    "seed:prod": "ts-node src/database/seeds/prod-seed.ts",
    "migrate:vat": "ts-node src/database/scripts/migrate-vat-data.ts",
    "deploy:init": "npm run migration:run && echo 'âœ… Database initialized successfully!'",
    "deploy:prod": "npm run build && npm run migration:run && npm run start:prod"
  },
