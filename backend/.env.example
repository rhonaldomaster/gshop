
# Database Configuration
DATABASE_URL=postgresql://gshop_user:gshop_password@localhost:5432/gshop_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=gshop_user
DB_PASSWORD=gshop_password
DB_DATABASE=gshop_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MercadoPago Configuration (Placeholders)
MERCAPAGO_CLIENT_ID=your-mercadopago-client-id
MERCAPAGO_CLIENT_SECRET=your-mercadopago-client-secret
MERCAPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCAPAGO_WEBHOOK_SECRET=your-mercadopago-webhook-secret
MERCAPAGO_ENVIRONMENT=sandbox

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Get webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment Provider Configuration
# Comma-separated list of enabled payment providers (stripe, mercadopago)
ENABLED_PAYMENT_PROVIDERS=stripe,mercadopago

# Exchange Rate API (for COP to USD conversion)
# Free API: https://api.exchangerate-api.com/v4/latest/USD
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# API Configuration
API_PORT=3000
API_PREFIX=api/v1
API_URL=http://localhost:3000

# Admin Web Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# App Configuration
APP_NAME=GSHOP
APP_URL=http://localhost:3001
DEFAULT_COMMISSION_RATE=7

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=uploads

# Redis Configuration (Optional for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@gshop.com

# Live Streaming Configuration
# AWS IVS (Interactive Video Service) - Use mock credentials for development
AWS_IVS_ENABLED=false
AWS_IVS_REGION=us-east-1
AWS_IVS_ACCESS_KEY_ID=mock-access-key-id
AWS_IVS_SECRET_ACCESS_KEY=mock-secret-access-key
AWS_IVS_INGEST_ENDPOINT=rtmps://mock-ingest.ivs.amazonaws.com:443/app
AWS_IVS_PLAYBACK_URL_PREFIX=https://mock-playback.ivs.amazonaws.com/v1

# Live Streaming URLs (Legacy - for backward compatibility)
RTMP_SERVER_URL=rtmp://localhost:1935/live
HLS_SERVER_URL=http://localhost:8080/hls

# WebSocket Configuration for Live Streaming
WEBSOCKET_URL=http://localhost:3000
WEBSOCKET_PATH=/socket.io

# Live Streaming Features
LIVE_STREAM_METRICS_INTERVAL=60
LIVE_STREAM_MAX_VIEWERS=10000
LIVE_STREAM_CHAT_RATE_LIMIT=10
LIVE_STREAM_ENABLE_RECORDING=false

# CDN Configuration (for thumbnails and recordings)
CDN_URL=https://cdn.gshop.com
S3_BUCKET_NAME=gshop-live-streams
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=mock-s3-access-key
S3_SECRET_ACCESS_KEY=mock-s3-secret-key

# Firebase Cloud Messaging (Push Notifications)
# Obtener de: Firebase Console > Project Settings > Service Accounts > Generate private key
# Guardar el JSON en: backend/firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
