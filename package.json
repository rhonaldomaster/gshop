{
  "name": "gshop",
  "version": "1.0.0",
  "description": "GSHOP - TikTok Shop Clone MVP",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:admin": "cd admin-web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:backend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-web && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../admin-web && npm install && cd ../mobile && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd backend && npm run migration:run",
    "db:seed": "cd backend && npm run seed",
    "test": "npm run test:backend && npm run test:admin",
    "test:backend": "cd backend && npm run test",
    "test:admin": "cd admin-web && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "admin-web",
    "mobile"
  ]
}
